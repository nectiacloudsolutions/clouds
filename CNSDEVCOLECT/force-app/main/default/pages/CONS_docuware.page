<apex:page standardController="case" extensions="CONS_Docuware"  action="{!lista_documentos}" lightningStylesheets="true" >
     <script type="text/javascript">
        function openThis(url,d){
            var myWin;
         myWin = window.open(url+'?d='+d,'myPopup','resizable=no,height=500,menubar=no,status=yes,titlebar=no,toolbar=no,top=30,width=500');
        }
    </script>
    <apex:form >
        <apex:pageBlock id="pb">
            <apex:pageMessages />
           <br/>
            <apex:outputText value="{!msg}"/>
            
            <apex:pageBlockSection showHeader="true" title="Documentos del cliente" collapsible="false" columns="1" >
                <apex:pageBlockTable value="{!lista}" var="l" width="100%">
                    <apex:column headerValue="Acción">
                    <apex:commandLink value="Ver documento"  onclick="openThis('/apex/CONS_docuwareverdocumento','{!l.texto}');" />
                </apex:column>
                 <apex:column headerValue="Nombre de documento" >
                    <apex:outputText value="{!l.obs1}" ></apex:outputText> 
                </apex:column>
                <apex:column headerValue="Código" >
                     <apex:outputText value="{!l.texto}" ></apex:outputText> 
                   
                </apex:column>
                <apex:column headerValue="Fecha">
                     <apex:outputText value="{!l.fecha}" ></apex:outputText> 

                </apex:column>
                </apex:pageBlockTable>
            </apex:pageBlockSection>
