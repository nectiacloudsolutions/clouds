<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Type</field>
        <field>Subtipo__c</field>
        <field>Rut_del_Cliente__c</field>
        <field>Description</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>ccontrerasr@consorciocb.cl</name>
                <type>user</type>
            </approver>
            <approver>
                <name>fperez@consorciocb.cl</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Aprueba supervisor</label>
        <name>Aprueba_supervisor</name>
    </approvalStep>
    <description>CCB - Aprobación Reclamo Comisiones y facturas, Solicitud de Abonos y retiros de dinero, Egreso custodia, Incorporaciones</description>
    <emailTemplate>Plantillas_CCB/CCB_SOLICITUD_DE_APROBACION</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 AND 2 AND 3) OR (3 AND 4 AND 5)</booleanFilter>
        <criteriaItems>
            <field>Case.Type</field>
            <operation>equals</operation>
            <value>Reclamo</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Subtipo__c</field>
            <operation>equals</operation>
            <value>Comisiones y facturas</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Status</field>
            <operation>equals</operation>
            <value>En proceso</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Type</field>
            <operation>equals</operation>
            <value>Solicitud</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Subtipo__c</field>
            <operation>equals</operation>
            <value>Abonos y retiros de dinero,Comisiones y facturas,Continuación del Flujo de Incorporación,Traspaso Custodia Egreso</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Solicitud_de_aprobaci_n_aprobada</name>
            <type>Task</type>
        </action>
        <action>
            <name>Subestado_derivado</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <label>CCB - Aprobaciones Procesos CCB</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
