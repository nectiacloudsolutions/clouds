    <fieldUpdates>
        <fullName>cnf_sal_fu_numero_documento_lead</fullName>
        <description>Convertir a mayúsculas el campo Número de Documento del Lead.</description>
        <field>numero_de_documento_sales__c</field>
        <formula>UPPER( numero_de_documento_sales__c )</formula>
        <name>Sales Actualizar Numero Documento Lead</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Sales Convertir Número Documento Lead</fullName>
        <actions>
            <name>cnf_sal_fu_numero_documento_lead</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Actualiza el valor ingresado en Número de Documento del Lead y lo deja en mayúscula.</description>
        <formula>OR(   				ISNEW(),   				ISCHANGED( numero_de_documento_sales__c), 				RecordType.DeveloperName = &apos;sales_lead_personas&apos; )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
