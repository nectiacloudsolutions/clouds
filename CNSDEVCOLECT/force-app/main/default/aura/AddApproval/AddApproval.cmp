<aura:component controller="AddApprovalController" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader" access="global">
 <aura:attribute name="selectedId" type="String" />
 <aura:attribute name="recordId" type="String" />
 <aura:attribute name="selectedLookUpRecord" type="sObject" default="{}"/>
    <aura:html tag="style">
        .cuf-content{
            padding:0 !important;
        }
        .slds-p-around--medium{
            padding:0 !important;
        }
        .slds-modal__container{
            width:40% !important;
            max-width:40% !important;
        }
        .slds-modal__content{
            overflow-y:hidden !important;
            height:unset !important;
            max-height:unset !important;
        }
    </aura:html>
    <!--Modal Header-->  
    <div class="modal-header slds-modal__header slds-size_1-of-1">
        <h4 class="title slds-text-heading--medium">Asignar Aprobador</h4>
    </div>
    <!--End Modal Header-->  
     
    <!--Modal Body-->   
    <div style="max-height: 250px; height:250px; overflow-y: auto ! important; padding: 0.50rem 1rem;">
         <c:customLookup objectAPIName="user" IconName="standard:user" label="Usuario" selectedRecord="{!v.selectedLookUpRecord}" />
    </div>
    <!--End of Modal Body-->
    
    <!--Modal Footer-->
	<footer class="slds-modal__footer" style="padding: 0.50rem 1rem;">
        <lightning:button variant="Brand" class="slds-button" label="Agregar" onclick="{!c.saveContactRecord}"/>
        <lightning:button variant="Neutral" class="slds-button" label="Cancel" onclick="{!c.closeQuickAction}"/>
    </footer>
 
</aura:component>